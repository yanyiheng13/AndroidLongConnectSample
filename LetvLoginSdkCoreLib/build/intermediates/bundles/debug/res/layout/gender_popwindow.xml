<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="160dp"
    android:background="@color/letv_color_0f000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/letv_color_ffffffff"
        android:minHeight="160dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/letv_color_ffdfdfdf" />

        <RelativeLayout
            android:id="@+id/gender_women_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/gender_women_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/personalinfo_women"
                android:textColor="@color/letv_color_99000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/gender_women_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/gender_women_tv"
                android:src="@drawable/letvloginsdk_duihao" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/letv_color_ffdfdfdf" />

        <RelativeLayout
            android:id="@+id/gender_men_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/gender_men_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/personalinfo_men"
                android:textColor="@color/letv_color_99000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/gender_men_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/gender_men_tv"
                android:src="@drawable/letvloginsdk_duihao"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/letv_color_ffdfdfdf" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="@color/letv_color_ffdfdfdf" />

        <Button
            android:id="@+id/getnder_selected_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/letv_color_00a0e9"
            android:gravity="center"
            android:text="@string/ensure"
            android:textColor="@color/letv_color_ffffffff" />
    </LinearLayout>

</RelativeLayout>