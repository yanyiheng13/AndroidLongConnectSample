<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/letv_color_fffafafa"
    android:orientation="vertical" >
    
	 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/letv_color_333333"
            android:text="@string/choose_country_area_title" />
        
        <ImageView
            android:id="@+id/imageView_choosecountryActivity_Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/letvloginsdk_close_selecter" />

    </RelativeLayout>

	 <ListView
	     android:id="@+id/MessageLoginActivity_listView"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
         android:divider="@color/login_color_e7e7e7"
         android:dividerHeight="0.5dp"
         android:listSelector="@color/letv_color_fffafafa"
         android:smoothScrollbar="false"  
         android:scrollbars="none"
	     android:layout_marginLeft="20dp"
	     android:layout_marginRight="20dp">
	 </ListView>

</LinearLayout>
