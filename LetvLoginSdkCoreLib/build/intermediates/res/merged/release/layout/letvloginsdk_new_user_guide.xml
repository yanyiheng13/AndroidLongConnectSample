<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/letvloginsdk_new_user_guide">
    <ImageView
        android:id="@+id/guide_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/letvloginsdk_new_user_guide_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/guide_subtitle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/loginactivity_new_user_guide_tite"
        android:textColor="@color/letv_color_ffffff"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/guide_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/loginactivity_new_user_guide_subtite"
        android:textColor="@color/letv_color_ffffff"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/guide_third_login_tv"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/letvloginsdk_new_user_guide_button"
        android:text="@string/loginactivity_third_part_login"
        android:textColor="@color/letv_color_00edff"
        android:textSize="15dp"/>

</RelativeLayout>
