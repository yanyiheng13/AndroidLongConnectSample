<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/shortcut_nickname_dialog_title"
        android:textColor="@color/letv_color_333333"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6dp"
        android:text="@string/shortcut_nickname_dialog_subtitle"
        android:textColor="@color/login_color_6b6b6b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_subtitle"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6dp"
        android:text="@string/shortcut_nickname_dialog_content"
        android:textColor="@color/login_color_6b6b6b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/button_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView_content"
        android:layout_marginTop="19dp"
        android:background="@color/letv_color_cccccc" />

    <TextView
        android:id="@+id/button_middle_line"
        android:layout_width="1dp"
        android:layout_height="47dp"
        android:layout_below="@+id/textView_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/letv_color_cccccc" />

    <TextView
        android:id="@+id/shortcut_nickname_cancle_tx"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/button_middle_line"
        android:layout_toLeftOf="@+id/button_middle_line"
        android:background="@drawable/letvloginsdk_dialog_left_button_selector"
        android:gravity="center"
        android:text="@string/cancle"
        android:textColor="@color/login_color_0f93de"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shortcut_nickname_ensure_tx"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_middle_line"
        android:layout_toRightOf="@+id/button_middle_line"
        android:background="@drawable/letvloginsdk_dialog_right_button_selector"
        android:gravity="center"
        android:text="@string/shortcut_nickname_dialog_yesbutton"
        android:textColor="@color/login_color_0f93de"
        android:textSize="18sp" />
	
    <TextView
        android:id="@+id/shortcut_nickname_onlyensure_tx"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@+id/textView_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/letvloginsdk_dialog_button_selector"
        android:gravity="center"
        android:text="@string/shortcut_nickname_dialog_yesbutton"
        android:textColor="@color/login_color_0f93de"
        android:textSize="18sp" 
        android:visibility="gone" />

</RelativeLayout>